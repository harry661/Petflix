{
  "buildCommand": "cd frontend && npm install --include=dev && npx vite build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install --include=dev",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

